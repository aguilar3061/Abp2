<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentApuntarse"
    android:background="@color/colorAzul"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
       >

        <LinearLayout
            android:id="@+id/idLinerLayautApuntarse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:paddingHorizontal="20dp"
            >



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "Numero de Persnas"
                android:textSize="20dp"
                />

            <EditText
                android:id="@+id/idCuants"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="1"
                android:gravity="center"
                />


            <Button
                android:id="@+id/buttonApuntarse"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:gravity="center"
                android:background="@color/colorAzul"
                android:text="Participar"

                />


        </LinearLayout>

        <TextView
            android:id="@+id/idTextCuandoSeEstaApun"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ya se esta apuntao al Evento :)"
            android:textSize="25dp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:gravity="center"
            />



    </LinearLayout>

</FrameLayout>