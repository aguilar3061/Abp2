<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentValorar">


    <LinearLayout
        android:id="@+id/idLinerLayautApuntarse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="10dp"

        >


        <LinearLayout
            android:id="@+id/idLinearLayautValorar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            >


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Valorar (1/5):"
                android:textSize="17dp"
                />

            <EditText
                android:id="@+id/idValorar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Comentario:"
                android:textSize="17dp"
                />

            <EditText
                android:id="@+id/idComentario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>


        <Button
            android:id="@+id/idBtnValorar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Valorar"
            android:background="@color/colorAzul"

            />



    </LinearLayout>

</FrameLayout>