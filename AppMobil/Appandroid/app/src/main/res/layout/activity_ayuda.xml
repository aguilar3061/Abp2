<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:background="@color/colorFondo">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AYUDA"
        android:textColor="#000000"
        android:padding="15dp"
        android:textSize="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eventos Finalizados:"
        android:textColor="#000000"
        android:textSize="23dp"
        android:paddingBottom="8dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_vew_circular"
        android:text="@string/stringRojoAYUDA"
        style="@style/ayudaStyle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_vew_circular_berde"
        android:text="@string/stringVerdeOscuroAYUDA"
        android:layout_marginTop="8dp"
        style="@style/ayudaStyle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eventos:"
        android:textColor="#000000"
        android:textSize="23dp"
        android:paddingBottom="8dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/redondo_gris"
        android:text="@string/stringGrisAYUDA"
        style="@style/ayudaStyle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/redondo_verde_bien"
        android:text="@string/stringVerdeClaroAYUDA"
        android:layout_marginTop="8dp"
        style="@style/ayudaStyle" />
</LinearLayout>